<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <EditText
        android:id="@+id/nome_edit_delete2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"  
        android:textColor="#000000"/>   
    
    <EditText
        android:id="@+id/cognome_edit_delete2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Cognome"  
        android:textColor="#000000"/>
    
    <EditText
        android:id="@+id/tel_edit_delete2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono"  
        android:textColor="#000000"/>
    
    <EditText
        android:id="@+id/eta_edit_delete2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Eta"  
        android:textColor="#000000"/>
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
	    <ImageButton
	        android:id="@+id/btn_indietro_edit2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:src="@drawable/backpage"
	        android:layout_gravity="center"
	        android:onClick="IndietroModificaSecondaTabella"/>
	    
		<Button
	        android:id="@+id/btn_edit_datalist2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Edit"
	        android:layout_gravity="center"
	        android:onClick="ModificaSecondaTabella"/>	
	    
		<Button
	        android:id="@+id/btn_delete_datalist2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Delete"
	        android:layout_gravity="center"
	        android:onClick="EliminaSecondaTabella"/>	
	
	</LinearLayout>
</LinearLayout>
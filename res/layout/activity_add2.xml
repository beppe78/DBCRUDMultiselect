<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      
      
  	<LinearLayout
		android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      
        <ImageButton android:id="@+id/btn_indietro" 
			android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/backpage" 
            android:textColor="#000000"
            android:onClick="indietroAddTable2"/>

        <EditText
            android:id="@+id/edit_text_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Insert Eta" />

        <Button android:id="@+id/btn_crea_playlist" 
			android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="Crea Table2"/>
        
    </LinearLayout>

     <ListView
         android:id="@+id/list2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true">
     </ListView>

     

  </LinearLayout>